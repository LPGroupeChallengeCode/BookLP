					<tr>
				</tbody>
			</table>

		</script>

		<script type="text/ng-template" id="/myTickets.html">
			<h2 style="text-align: center">My Tickets</h2>
			<br>

  			<table class="table table-bordered">
				<thead>
					<tr>
						<th>Ticket id</th>
						<th>Summary</th>
						<th>Priority</th>
						<th>Reported by</th>
						<th>Status</th>
						<th>Action</th>
					<tr>
				</thead>
				<tbody>
					<tr ng-repeat="ticket in tickets">
						<td>{{ticket._id}}</td>
						<td>{{ticket.summary}}</td>
						<td>{{ticket.priority}}</td>
						<td>{{ticket.reporter.username}}</td>
						<td>{{ticket.status}}</td>
						<td><a href="#/ticket/{{ticket._id}}">Show</a></td>
					<tr>
				</tbody>
			</table>
